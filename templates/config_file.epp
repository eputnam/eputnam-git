<%- | String $user_name,
      String $user_email,
      Array $aliases
| -%>

# Git configuration file managed by Puppet

[user]
name  = <%= $user_name %>
email = <%= $user_email %>

<% if ($aliases.size > 0) { -%>
[alias]
<%   $aliases.each |Hash $alias| { -%>
<%     $alias.each |String $a, String $cmd| { -%>
<%= "$a " -%> = '<%= $cmd -%>'
<%     } -%>
<%   } -%>
<% } -%>
